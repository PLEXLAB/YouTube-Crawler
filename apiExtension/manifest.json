{
    "name": "Youtube reports extension",
    "version": "0.1",
    "manifest_version": 2,
    "description": "An extension that will extract data from a youtube analytics spreadsheet",

    "browser_action": {
        "default_popup": "src/browser_action/popup.html",
        "scripts":[
            "src/browser_action/jquery-3.4.1.min.js",
            "src/browser_action/browser_action.js"
        ]
    },

    "background":{
        "scripts":[
            "src/background/background.js",
            "src/browser_action/jquery-3.4.1.min.js"
        ]
    },

    "permissions": [
        "alarms",
        "storage",
        "identity",
        "tabs",
        "activeTab",
        "background",
        "https://www.googleapis.com/*",
        "https://*.googleusercontent.com/*",
        "https://youtubereporting.googleapis.com/*"
    ],

    "content_scripts": [{
        "matches":[
            "https://*.google.com/*"
        ],
        "js": [
          "src/inject/report.js"
        ],
        
        "Content_Security_Policy": "script-src 'self' blob: filesystem: chrome-extension-resource: 'strict-dynamic' 'unsafe-inline' object-src 'self'"
    }],

    "oauth2": {
        "client_id": "452970754221-s86hs2fit6d62v8bdc8si86cdrbf45mh.apps.googleusercontent.com",
        "scopes": [
            "profile",
            "https://www.googleapis.com/auth/yt-analytics-monetary.readonly",
            "https://www.googleapis.com/auth/yt-analytics.readonly",
            "https://www.googleapis.com/auth/youtube.readonly"
        ]
    }
    
}